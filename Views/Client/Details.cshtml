@model Vjezba.Web.Mock.Client

<style>
    .breadcrumb{
        padding:10px;
    }
</style>

@if (Model.ID == 999)
{
    <div class="alert alert-danger" role="alert">
        <p>Klijent nije pronađen.</p>
    </div>
}
else
{
    <div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Client")">Popis klijenata</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.FullName</li>
        </ol>
    </nav>
    </div>

    <div class="container">
        <h4>Detalji klijenta</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4">Ime i Prezime</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Spol</dt>
            <dd class="col-sm-8">@Model.Gender</dd>

            <dt class="col-sm-4">Adresa</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4">Tel.</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Grad</dt>
            <dd class="col-sm-8">@Model.City?.Name</dd>

        </dl>
    </div>
}
