@model List<Vjezba.Web.Mock.Client>

<!DOCTYPE html>
<html>
<head>
    <title>List of Clients</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .breadcrumb {
        padding: 10px;
    }
</style>
<body>
    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="get-tab" data-toggle="tab" href="#get-form" role="tab" aria-controls="get-form" aria-selected="true">GET Forma</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="post-tab" data-toggle="tab" href="#post-form" role="tab" aria-controls="post-form" aria-selected="false">POST Forma</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="filter-tab" data-toggle="tab" href="#filter-form" role="tab" aria-controls="filter-form" aria-selected="false">Filter Forma</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="get-form" role="tabpanel" aria-labelledby="get-tab">
                <form method="GET" action="@Url.Action("Index", "Client")" class="form-inline mt-3">
                    <div class="form-group mr-2">
                        <input type="text" class="form-control mb-2 mr-sm-2" id="query" name="query">
                    </div>
                    <button type="submit" class="btn btn-dark mb-2">Search</button>
                </form>
            </div>
            <div class="tab-pane fade" id="post-form" role="tabpanel" aria-labelledby="post-tab">
                <form method="POST" action="@Url.Action("Index", "Client")" class="mt-3">
                    <div class="form-row">
                        <div class="col-md-3 mb-2">
                            <input type="text" class="form-control" id="queryName" name="queryName">
                        </div>
                        <div class="col-md-3 mb-2">
                            <input type="text" class="form-control" id="queryAddress" name="queryAddress">
                        </div>
                        <div class="col-md-3 mb-2">
                            <button type="submit" class="btn btn-dark">Search</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="filter-form" role="tabpanel" aria-labelledby="filter-tab">
                <form method="POST" action="@Url.Action("AdvancedSearch", "Client")" class="mt-3">
                    <div class="form-row">
                        <div class="col-md-2 mb-2">
                            <input type="text" class="form-control" id="clientName" name="clientName" placeholder="Client Name">
                        </div>
                        <div class="col-md-2 mb-2">
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="col-md-2 mb-2">
                            <input type="text" class="form-control" id="address" name="address" placeholder="Address">
                        </div>
                        <div class="col-md-2 mb-2">
                            <input type="text" class="form-control" id="cityName" name="cityName" placeholder="City Name">
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-dark">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Client</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>City</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(client.FullName, "Details", "Client", new { id = client.ID }, null)</td>
                        <td>@client.Address</td>
                        <td>@client.Email</td>
                        <td>@client.City?.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>